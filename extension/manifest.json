{
    "name": "Epoch Buddy: Unix Timestamp & Date Converter",
    "short_name": "Epoch Buddy",
    "description": "Instantly convert Unix/Epoch timestamps to human-readable dates and vice-versa directly in your browser. No more copying to external sites.",
    "version": "1.2.1",
    "manifest_version": 3,
    "homepage_url": "https://shivams136.github.io/epoch-buddy/index.html",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_title": "Epoch Buddy",
        "default_popup": "index.html",
        "default_icon": "logo.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "script.js"
            ],
            "css": [
                "script.css"
            ]
        }
    ]
}
